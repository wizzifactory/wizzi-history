r-component( DocumentEditor )

	$append imports
		# import Textarea from 'material-ui/Input/Textarea'
		# import CodeEditor from './CodeEditor'
		import AceCodeEditor from './AceCodeEditor'

	style
	
	render
		prop value
		prop onEditorRef

		return
			div
				{
					&& 
						+ {value}
						< AceCodeEditor
							@ value {value}
							@ onEditorRef
								=>
									param node
									if onEditorRef
										_ onEditorRef
											@ node
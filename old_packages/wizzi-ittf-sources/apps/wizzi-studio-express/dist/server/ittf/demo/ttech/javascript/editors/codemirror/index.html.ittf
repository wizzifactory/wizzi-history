html

	$
		var opt = {}
		opt.useCodemirror = true;

	page( &opt
		
		textarea
			id myTextarea
			name myTextarea
			+ var i = 0;
		
		$append styles
			@style
				css
					< body
						background-color #322132

		$append scripts
		
			ready
				kind window
				module
					var editor
						_ CodeMirror.fromTextArea
							_ document.getElementById
								@ 'myTextarea'
							{
								@ lineNumbers true
$group
	$params &app
	
	{
		@ test /\.(js|jsx)$/
		@ exclude /node_modules/
		[ use
			@ 'babel-loader'
	
	$if app.webpack.loadCss || app.importMainStyles
		{
			@ test /\.css$/
			[ use
				@ 'style-loader'
				@ 'css-loader'
		
	$if app.useCodemirror || app.useMonaco || app.usePrismjs
		{
			@ test /(\.scss)$/
			@ exclude /(node_modules)/
			[ use
				@ 'style-loader'
				@ 'css-loader'
				@ 'sass-loader'



{
	$include app-options

	name "${app.name}"
	version "${app.version}"
	description "${app.description}"
	author "${app.author}"
	license "${app.license}"
	
	main "index.js"
	
	{ scripts
		test "echo \"Error: no test specified\" && exit 1"
		app/package/scripts(&app)
	
	{ dependencies
		app/package/dependencies(&app)

	{ devDependencies
		app/package/devDependencies(&app)

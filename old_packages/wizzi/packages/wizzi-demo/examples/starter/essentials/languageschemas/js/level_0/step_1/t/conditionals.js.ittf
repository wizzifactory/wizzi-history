$group

	+
	# ========================================
	# CONDITIONALS
	# ========================================
	+

	# 
		# The if, else if, else conditional statement
	if oper === 'sum'
		log 'sum', a + b
	elif oper === 'times'
		log 'times', a * b
	elif oper === 'sub'
		log 'subtract', a - b
	else
		log 'divide', a / b

	# 
		# The switch conditional statement
	switch letter
		case 'a'
			log 'alfa'
		case 'b'
			log 'beta'
		default
			log 'gamma'


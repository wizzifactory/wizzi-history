{
	$include app-options

	name "${app.name}"
	version "${app.version}"
	description "${app.description}"
	author "${app.author}"
	license "${app.license}"
	
	main "index.js"

	{ scripts
		test "echo \"Error: no test specified\" && exit 1"
		build "node index"
		app/package/scripts(&app)
	
	{ dependencies
		app/package/dependencies(&app)
		react "^16.0.0"
		react-dom "^16.0.0"
		wizzi-bundlers "latest"
		wizzi-utils "latest"

	{ devDependencies
		app/package/devDependencies(&app)
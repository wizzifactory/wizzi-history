{
    name "Wizzify"
    version "1.0"
    description "Wizzify"

	manifest_version 2

    { page_action
        default_popup "popup.html"
        { default_icon
            16 "/images/wizzify16.png"
    
	{ icons
        16 "/images/wizzify16.png"
    
	[ permissions
        "downloads"
        "storage"
        "activeTab"
        "declarativeContent"
    
	{ background
        [ scripts
            "background.js"
        persistent false
    
	options_page "options.html"
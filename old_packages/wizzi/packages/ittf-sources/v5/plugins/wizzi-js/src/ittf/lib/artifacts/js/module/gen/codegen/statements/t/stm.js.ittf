set cnt.stm.${name}
	$params name, arg1|@@null
	function
		param model
		param ctx
		$if arg1 != null
			param ${arg1}
		param callback
		if typeof callback === 'undefined'
			throw
				new Error
					@ 'Missing callback parameter in cnt.stm: ' + myname + '.${name}'
		if typeof callback !== 'function'
			throw
				new Error
					@ 'The callback parameter must be a function. In ' + myname + '.${name}. Got: ' + callback		
		$hook
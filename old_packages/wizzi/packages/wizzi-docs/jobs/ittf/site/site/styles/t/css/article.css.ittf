$group
	
	< section h1
		background #444
		color #eee
		padding 10px 5px

	< section h2
		background #ddd
		color #000
		padding 15px 5px
		margin 20px 0
	
	< h3
		background #eee
		color #000
		padding 3px 1px
	
	. pretty-table
		border 1px solid #333
		width 100%
	
	. pretty-table th, .pretty-table td
		border 1px solid #666

	. cli-command
		background #333
		border-radius 3px
		color #f0f0f0
		padding .75em 1.2em
		font-family courier
		font-size .8em

	. concept
		margin 30px 0



$group

    < a
        color #2086d7
        text-decoration none
        -webkit-transition color 250ms
        transition color 250ms

	< a:hover
        color #1a6aab
    
	< a.icon-link
        display inline-block
        font-size 0.7em
        margin-left 16px
        -webkit-transform rotate(-45deg)
        transform rotate(-45deg)
        color #b3b3b3
    
	< a.icon-link:hover
        color #2086d7
